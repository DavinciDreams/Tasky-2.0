{
  "name": "@tasky/mcp-agent",
  "version": "0.1.0",
  "description": "Model Context Protocol (MCP) agent for Tasky (tasks + reminders)",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "rimraf dist && tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "echo 'no linter configured'",
    "docker:build": "docker build -t tasky-mcp-agent .",
    "docker:run": "docker run -p 7842:7842 -v $(pwd)/data:/app/data tasky-mcp-agent",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "better-sqlite3": "^9.6.0",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.8.10",
    "@types/better-sqlite3": "^7.6.9",
    "@types/uuid": "^9.0.7",
    "rimraf": "^5.0.5",
    "tsx": "^4.0.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
