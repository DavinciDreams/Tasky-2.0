{
  "name": "tasky-2.0-task-management",
  "version": "1.0.0",
  "description": "A cross-platform desktop task management application with animated assistant companion. Features recurring reminders, notification sounds, and customizable desktop companion.",
  "main": ".vite/build/main.js",
  "homepage": "./",
  "scripts": {
    "clean": "node -e \"const fs=require('fs'); try{fs.rmSync('src/renderer/dist',{recursive:true,force:true})}catch(e){} try{fs.rmSync('.vite/build',{recursive:true,force:true})}catch(e){}\"",
    "start": "npm run clean && npm run build:all && cross-env TASKY_DB_PATH=./data/tasky.db TASKY_SQLITE_JOURNAL=DELETE electron .",
    "start:db": "cross-env TASKY_DB_PATH=./data/tasky.db npm start",
    "start:db:migrate": "cross-env TASKY_DB_PATH=./data/tasky.db TASKY_MIGRATE_JSON=1 npm start",
    "build": "npm run clean && npm run build:all",
    "dist": "npm run build && npx electron-builder",
    "dist:mac": "npm run build && npx electron-builder --mac",
    "dist:win": "npm run build && npx electron-builder --win",
    "dist:linux": "npm run build && npx electron-builder --linux",
    "pack": "npx electron-builder --dir",
    "lint": "eslint --ext .ts,.tsx . || true",
    "dev": "cross-env NODE_ENV=development TASKY_DB_PATH=./data/tasky.db npm run build:all && electron .",
    "build:all": "npm run build-renderer && npm run build-electron",
    "rebuild:native": "electron-rebuild -f -w better-sqlite3",
    "postinstall": "electron-rebuild -f -w better-sqlite3",
    "dev:live": "concurrently -k -n \"renderer,main,electron\" -c \"magenta,cyan,green\" \"vite --config vite.renderer.config.js\" \"vite build --watch --config vite.electron.config.js\" \"wait-on http://localhost:3000 .vite/build/main.js && cross-env NODE_ENV=development electron .\"",
    "electron": "electron .",
    "build-renderer": "vite build --config vite.renderer.config.js",
    "build-electron": "vite build --config vite.electron.config.js",
    "check:unused": "npx -y ts-prune --ignore \"(src[\\/]+renderer[\\/]+dist|tasky-mcp-agent|\\.vite|^dist$)\"",
    "report:unused": "npx -y ts-prune --json --ignore \"(src[\\/]+renderer[\\/]+dist|tasky-mcp-agent|\\.vite|^dist$)\" > ts-prune-report.json",
    "backup:db": "node -e \"const fs=require('fs'),p='data/tasky.db',d=new Date().toISOString().replace(/[:.]/g,'-'); if(fs.existsSync(p)){fs.copyFileSync(p,`data/tasky-backup-${d}.db`); console.log('Backup created')} else { console.error('No DB found at', p); process.exit(1)}\"",
    "export:tasks": "node -e \"(async()=>{const res=await fetch('http://localhost:7843/mcp',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify({jsonrpc:'2.0',id:1,method:'tools/call',params:{name:'tasky_list_tasks',arguments:{}}})}); const j=await res.json(); const arr=j.result?.content||[]; const last=arr[arr.length-1]; console.log(last?.text||JSON.stringify(j));})().catch(e=>{console.error(e);process.exit(1);})\"",
    "agent:dev": "npm --prefix tasky-mcp-agent run dev",
    "agent:dev:mcp": "npm --prefix tasky-mcp-agent run dev:mcp",
    "agent:build": "npm --prefix tasky-mcp-agent run build",
    "agent:build:mcp": "npm --prefix tasky-mcp-agent run build:mcp",
    "agent:start": "npm --prefix tasky-mcp-agent run start",
    "agent:start:mcp": "npm --prefix tasky-mcp-agent run start:mcp",
    "agent:docker:build": "npm --prefix tasky-mcp-agent run docker:build",
    "agent:docker:up": "npm --prefix tasky-mcp-agent run docker:up",
    "agent:docker:down": "npm --prefix tasky-mcp-agent run docker:down",
    "agent:docker:logs": "npm --prefix tasky-mcp-agent run docker:logs",
    "agent:health": "node -e \"require('node:http').get('http://localhost:7844/health',r=>r.pipe(process.stdout))\"",
    "agent:tools": "node -e \"(async()=>{const res=await fetch('http://localhost:7844/mcp',{method:'POST',headers:{'Content-Type':'application/json'},body:JSON.stringify({jsonrpc:'2.0',id:1,method:'tools/list'})}); const j=await res.json(); console.log(JSON.stringify(j,null,2));})().catch(e=>{console.error(e);process.exit(1);})\"",
    "agent:docker:rebuild": "docker compose -f tasky-mcp-agent/docker-compose.yml build --no-cache",
    "test:mcp:e2e": "node scripts/mcp-e2e-test.js",
    "test": "vitest run --environment happy-dom",
    "test:watch": "vitest --environment happy-dom",
    "test:openai": "node scripts/openai-smoke.mjs"
  },
  "keywords": [
    "electron",
    "desktop-app",
    "tray",
    "tasky",
    "assistant",
    "notifications",
    "scheduler",
    "productivity",
    "cross-platform",
    "task-management"
  ],
  "author": {
    "name": "Traves Theberge",
    "email": "Traves.theberge@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Traves-Theberge/Tasky-2.0-Task-Management"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.4.0",
    "@electron-forge/maker-rpm": "^7.4.0",
    "@electron-forge/maker-squirrel": "^7.4.0",
    "@electron-forge/maker-zip": "^7.4.0",
    "@electron-forge/plugin-vite": "^7.8.1",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/react": "^16.0.0",
    "@types/node": "^24.2.0",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.21",
    "better-sqlite3": "^12.2.0",
    "concurrently": "^9.2.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "electron": "^29.4.6",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.33.0",
    "glob": "^11.0.3",
    "happy-dom": "^15.11.7",
    "postcss": "^8.5.6",
    "rimraf": "^6.0.1",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.9.2",
    "vite": "^7.0.6",
    "vitest": "^2.1.4",
    "wait-on": "^8.0.4"
  },
  "vitest": {
    "environment": "happy-dom"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.0",
    "@ai-sdk/openai-compatible": "^1.0.0",
    "@emoji-mart/data": "^1.2.1",
    "@emoji-mart/react": "^1.1.1",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@tanstack/react-query": "^5.85.3",
    "@tanstack/react-query-devtools": "^5.85.3",
    "ai": "^5.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "electron-store": "^8.1.0",
    "emoji-mart": "^5.6.0",
    "framer-motion": "^12.23.12",
    "googleapis": "^156.0.0",
    "gsap": "^3.13.0",
    "lucide-react": "^0.533.0",
    "node-cron": "^3.0.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^3.3.1",
    "xml2js": "^0.6.2",
    "yaml": "^2.8.1",
    "zod": "^3.23.8"
  },
  "build": {
    "appId": "com.tasky2.taskapp",
    "productName": "Tasky 2.0 - Task Management",
    "directories": {
      "output": "dist"
    },
    "files": [
      ".vite/build/**/*",
      "src/renderer/dist/**/*",
      "src/assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "src/assets/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "src/assets/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/icon.png",
      "category": "Office"
    }
  }
}
