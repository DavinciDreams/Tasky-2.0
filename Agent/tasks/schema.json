{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Looper Task Schema",
  "description": "Schema for Looper task management system",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version"
    },
    "lastModified": {
      "type": "string",
      "format": "date-time",
      "description": "Last modification timestamp"
    },
    "tasks": {
      "type": "array",
      "description": "Array of tasks",
      "items": {
        "$ref": "#/definitions/task"
      }
    }
  },
  "required": ["version", "tasks"],
  "definitions": {
    "task": {
      "type": "object",
      "properties": {
        "schema": {
          "$ref": "#/definitions/taskSchema"
        },
        "status": {
          "type": "string",
          "enum": ["PENDING", "COMPLETED", "NEEDS_REVIEW"],
          "description": "Current task status"
        },
        "humanApproved": {
          "type": "boolean",
          "description": "Whether the task has been approved by a human"
        },
        "assignedAgent": {
          "type": "string",
          "enum": ["ANALYZER", "BUILDER", "TESTER", "DOCUMENTER", "REFACTORER"],
          "description": "Agent assigned to this task"
        },
        "result": {
          "type": "string",
          "description": "Task execution result"
        },
        "notes": {
          "type": "string",
          "description": "Additional notes about the task"
        },
        "metadata": {
          "$ref": "#/definitions/taskMetadata"
        }
      },
      "required": ["schema", "status", "humanApproved"]
    },
    "taskSchema": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique task identifier"
        },
        "title": {
          "type": "string",
          "minLength": 1,
          "description": "Task title"
        },
        "description": {
          "type": "string",
          "description": "Detailed task description"
        },
        "category": {
          "type": "string",
          "enum": ["FRONTEND", "BACKEND", "DATABASE", "API", "UI_UX", "PERFORMANCE", "SECURITY", "TESTING", "DOCUMENTATION", "DEVOPS", "BUG_FIX", "FEATURE", "REFACTOR", "MAINTENANCE"],
          "description": "Task category"
        },
        "affectedFiles": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Files affected by this task"
        },
        "priority": {
          "type": "integer",
          "enum": [0, 1, 2, 3],
          "description": "Task priority (0=Low, 1=Medium, 2=High, 3=Critical)"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "Creation timestamp"
        }
      },
      "required": ["id", "title", "description", "category", "priority", "createdAt"]
    },
    "taskMetadata": {
      "type": "object",
      "properties": {
        "version": {
          "type": "integer",
          "description": "Task version number"
        },
        "createdBy": {
          "type": "string",
          "description": "User who created the task"
        },
        "lastModified": {
          "type": "string",
          "format": "date-time",
          "description": "Last modification timestamp"
        },
        "archivedAt": {
          "type": "string",
          "format": "date-time",
          "description": "Archive timestamp"
        }
      },
      "required": ["version", "createdBy", "lastModified"]
    }
  }
} 