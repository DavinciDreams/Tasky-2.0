{
  "name": "@looper/cli",
  "version": "1.1.0",
  "description": "Looper CLI - Intelligent Task Management System with AI Agent Integration",
  "main": "dist/index.js",
  "bin": {
    "looper": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && node scripts/add-shebang.js && npm run build:mcp",
    "build:mcp": "cd looper-mcp-agent && npm run build:mcp-only",
    "build:cli-only": "tsc && node scripts/add-shebang.js",
    "build:watch": "tsc --watch",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist coverage .nyc_output",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run clean && npm run build",
    "tui": "ts-node src/index.ts tui",
    "typecheck": "tsc --noEmit",
    "check-all": "npm run typecheck && npm run lint",
    "prepare": "npm run build",
    "release": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish",
    "start:tui": "node dist/index.js tui",
    "start:dev": "ts-node src/index.ts tui",
    "test-auto-sync": "node scripts/test-auto-sync.js",
    "test-auto-process": "node scripts/test-auto-process.js"
  },
  "keywords": [
    "looper",
    "cli",
    "tui",
    "typescript",
    "repository",
    "task-management",
    "ai",
    "automation",
    "mcp",
    "claude",
    "gemini",
    "wsl"
  ],
  "author": "Traves Theberge <traves.theberge@ocmxai.com>",
  "license": "PROPRIETARY",
  "homepage": "https://github.com/Opencodemission/looper-cli#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Opencodemission/looper-cli.git"
  },
  "bugs": {
    "url": "https://github.com/Opencodemission/looper-cli/issues"
  },
  "dependencies": {
    "@types/chokidar": "^1.7.5",
    "boxen": "^5.1.2",
    "chalk": "^4.1.2",
    "chokidar": "^4.0.3",
    "cli-table3": "^0.6.3",
    "commander": "^11.1.0",
    "date-fns": "^2.30.0",
    "figlet": "^1.7.0",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "gradient-string": "^2.0.2",
    "inquirer": "^9.2.12",
    "minimatch": "^9.0.3",
    "ora": "^5.4.1",
    "strip-ansi": "^6.0.1",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/figlet": "^1.5.8",
    "@types/fs-extra": "^11.0.4",
    "@types/gradient-string": "^1.1.6",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.8.10",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE",
    "looper-mcp-agent/dist"
  ]
}
